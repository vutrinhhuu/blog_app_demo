<header style="background-image: url('app/img/kitten.jpg')">
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= link_to "Create new entry", entry_path, class: "btn btn-primary" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h6><%= "New feed" %></h6>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= "Welcome to My Blog!" %></h1>

  <h2>
    Join with us and start to create amazing blog
    <a href="#">#MyBlog</a>
  </h2>

  <%= link_to t("sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<div class="col-lg-12">
  <h6><%= "Our latest entries" %></h6>
  <%= render "shared/feed" %>
</div>



<%#= link_to image_tag("rails.png", alt: "Rails logo"),
                      "http://rubyonrails.org/" %>
<%#= image_tag("kitten.jpg", alt: "Kitten") %>
<% end %>
</header>
