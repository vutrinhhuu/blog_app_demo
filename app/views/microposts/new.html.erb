<% provide :title, "Create Entry" %>
<h1><%= t "create_entry" %></h1>
<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <h4><%= f.label t("title") %></h4>
    <%= f.text_area :title, placeholder: t("title"), class: "form-control" %>
    <h4><%= f.label t("body")%></h4>
    <%= f.text_area :content, placeholder: t("micropost_holder"),
      class: "form-control", rows: 13 %>
  </div>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg, image/gif, image/png" %>
  </span>
  <%= f.submit t("post"), class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $("#micropost_picture").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert(t("big_size_alert"));
    }
  });
</script>
