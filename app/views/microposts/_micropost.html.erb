<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.all_avatar_size),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="title"></br><h3><%= micropost.title %></h3></span>
  <span class="content">
    <%= truncate(micropost.content, length: 180) %>
    <small><%= link_to "  ...READ MORE", micropost %></small>
  </span>
  <div class= "text-center">
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </div>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.

    <% if logged_in? && current_user.current_user?(micropost.user) %>
      <%= link_to t("delete"), micropost, method: :delete,
                                          data: { confirm: t("sure_confirm") } %>
    <% end %>
  </span>
</li>
